{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="well well-sm">
                    <form class="" method="post">
                        {{ form_start(form) }}
                        <fieldset>
                            <legend class="text-xs-center header">Contact us</legend>

                          <div class="form-group">
                                <span class="col-md-1 offset-md-2 text-xs-center">Nom :<i class="fa fa-user bigicon"></i></span>
                                <div class="col-md-8">
                                    {{ form_widget(form.firstname) }}
                                    {{ form_errors(form.firstname) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="col-md-1 offset-md-2 text-xs-center">Pr√©nom :<i class="fa fa-user bigicon"></i></span>
                                <div class="col-md-8">
                                    {{ form_widget(form.lastname) }}
                                    {{ form_errors(form.lastname) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="col-md-1 offset-md-2 text-xs-center">Email :<i class="fa fa-envelope-o bigicon"></i></span>
                                <div class="col-md-8">
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="col-md-1 offset-md-2 text-xs-center">Objet :<i class="fa fa-envelope-o bigicon"></i></span>
                                <div class="col-md-8">
                                    {{ form_widget(form.subject) }}
                                    {{ form_errors(form.subject) }}
                                </div>
                            </div>


                            <div class="form-group">
                                <span class="col-md-1 offset-md-2 text-xs-center">Message :<i class="fa fa-pencil-square-o bigicon"></i></span>
                                <div class="col-md-8">
                                    {{ form_widget(form.message) }}
                                    {{ form_errors(form.message) }}
                                </div>
                                <div style="display:none">
                                    {{ form_rest(form) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-xs-center">
                                    <button id="btnSubmit" type="submit" class="btn btn-primary btn-lg">Submit</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
        .header {
            color: #36A0FF;
            font-size: 27px;
            padding: 10px;
        }

        .bigicon {
            font-size: 35px;
            color: #36A0FF;
        }
    </style>





{% endblock %}

